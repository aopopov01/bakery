{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "headers": {
        "cache-control": "s-maxage=31536000,immutable"
      }
    },
    {
      "src": "/(.*\\.(mp4|webm|ogg|avi|mov))",
      "headers": {
        "cache-control": "s-maxage=31536000,immutable",
        "content-type": "video/mp4"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}